      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "oaps-hook session_start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "oaps-hook session_end"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
